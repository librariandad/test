{
  "paths": {
    "base_path": "/path/to/document/root/",
    "record_data": "data/records.csv",
    "page_map": "data/page_map.json"
  },
  "group_by": {
    "field": "Course",
    "delim": "|"
  },
  "sort_field": "Author",
  "validation": {
    "Title": {
      "method": "stringVal"
    },
    "Author": {
      "method": "stringVal"
    },
    "Required": {
      "method": "in",
      "args": [
        "Required",
        "Recommended"
      ]
    },
    "ISBN": {
      "method": "isbn"
    },
    "URL": {
      "method": "url"
    },
    "Year": {
      "method": "date",
      "args": ["Y"]
    },
    "Edition": {
      "method": "regex",
      "args": ["/1st|2nd|3rd|[4-9]th|[1-9][0-9]th/"]
    }
  }
}
